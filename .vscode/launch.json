{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "tsx debug",
      "type": "node",
      "request": "launch",
      // 相对位置文件
      "args": ["${relativeFile}"],
      // 使用什么来执行文件
      "runtimeExecutable": "tsx",
      // 在调试会话启动时同时打开控制台
      "internalConsoleOptions": "openOnSessionStart",
      // 禁止警告
      "runtimeArgs": ["--no-warnings"]
      // "cwd": "${workspaceRoot}",
    }
  ]
}
